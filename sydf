#! /bin/env bash

SYDFCONFIG=$HOME/.config/sydf.conf
SYDFDIR=""
if [ -f $SYDFCONFIG ]; then
	SYDFDIR=`cat $SYDFCONFIG`
else
	echo "sydf needs to be initialized"
fi

function path {

	P=""
	if [ -z $1 ] || [ $1 = "." ]; then
		P=$PWD
	elif [ ${1:0:1} = "/" ]; then
		P=$1
	else
		P=$PWD/$1
	fi

	echo $P

}

